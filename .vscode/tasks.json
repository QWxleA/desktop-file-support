{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Package the extension",
            "type": "shell",
            "detail": "Package the extension into a .vsix file.",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "windows": {
                "command": "&",
                "args": [ "vsce", "package" ],
                "options": {
                    "cwd": "${workspaceFolder}",
                    "shell": {
                        "executable": "C:/Program Files/PowerShell/7/pwsh.exe",
                        "args": [
                            "-nol",
                            "-i",
                            "-c"
                        ]
                    }
                }
            },
            "linux": {
                "command": "/usr/bin/vsce",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "shell": {
                        "executable": "/bin/bash",
                        "args": [
                            "-c"
                        ]
                    }
                }
            }
        }
    ]
}
